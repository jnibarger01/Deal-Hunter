# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database
# Connect to local postgres container by default
DATABASE_URL="postgresql://dealhunter:dealhunter_dev_password@localhost:5432/dealhunter?schema=public"

# Security
# Generate a strong secret with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# API Keys (External Services)
GEMINI_API_KEY=your-gemini-api-key
EBAY_API_KEY=your-ebay-api-key
FACEBOOK_API_KEY=your-facebook-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173
LOG_LEVEL=info
